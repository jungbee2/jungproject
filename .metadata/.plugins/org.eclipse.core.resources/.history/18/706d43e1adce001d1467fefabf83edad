   <c:if test="${!empty param.irum }">
      <h3>이름: ${param.irum }</h3>
      <h3>가고 싶은 나라: ${param.nara }</h3>
      
      <c:choose>
         <c:when test="${param.nara=='캐나다' }">
            <h3 style="color: green;">캐나다 항공권은 200만원입니다</h3>
         </c:when>
         <c:when test="${param.nara=='하와이' }">
            <h3 style="color: green;">하와이 항공권은 80만원입니다</h3>
         </c:when>
         <c:when test="${param.nara=='광' }">
            <h3 style="color: green;">광 항공권은 80만원입니다</h3>
         </c:when>
         <c:when test="${param.nara=='뉴욕' }">
            <h3 style="color: green;">뉴욕 항공권은 250만원입니다</h3>
         </c:when>
         <c:otherwise>
            <h3 style="color: red">${param.nara }(으)로 가는 항공권이 없습니다</h3>
         </c:otherwise>
      </c:choose>
   </c:if>
