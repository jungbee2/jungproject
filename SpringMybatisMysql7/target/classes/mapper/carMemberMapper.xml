<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTDMapper3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="member">
	<select id="getTotalCountOfMyCarMember" resultType="int">
		select count(*) from carmember
	</select>
	
	<select id="getAllDatasOfMyCarMember" resultType="CarMemberDto">
		select * from carmember order by num desc
	</select>
	
	<insert id="insertOfMyCarMember" parameterType="CarMemberDto">
		insert into carmember(name, hp, addr, gaipday) values (#{name} ,#{hp} ,#{addr} ,#{gaipday})
	</insert>
	
	<select id="getOneDataOfMyCarMember" resultType="CarMemberDto" parameterType="String">
		select * from carmember where num=#{num}
	</select>
	
	 <update id="updateOfMyCarMember" parameterType="CarMemberDto">
	 	update carmember set name=#{name}, hp=#{hp},addr=#{addr},gaipday=#{gaipday} where num=#{num}
	 </update>
	 
	 <delete id="deleteOfMyCarMember" parameterType="String">
	 	delete from carmember where num=#{num} 
	 </delete>
	 
</mapper>